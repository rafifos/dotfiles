# Expands .. at the beginning, after space, or after any of ! " & ' / ; < > |
# See:
#   1. https://github.com/zimfw/input/blob/2f95e2aeed9b4cc3e383adcb41c7a9e8d9f8d89d/init.zsh#L76
if [[ ${LBUFFER} == (|*[[:space:]!\"\&\'/\;\<\>|]).. ]]; then
  LBUFFER+='/..'
else
  LBUFFER+='.'
fi
