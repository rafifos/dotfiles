# Configurations for zsh-syntax-highlighting.
# See https://github.com/zsh-users/zsh-syntax-highlighting/blob/master/docs/highlighters.md

# Enabled highlighters.
export ZSH_HIGHLIGHT_HIGHLIGHTERS=(main root brackets)

# Configurations for the `brackets` highlighter that highlights brackets and parentheses, and matches them.
# See: https://github.com/zsh-users/zsh-syntax-highlighting/blob/master/docs/highlighters/brackets.md
declare -x -A ZSH_HIGHLIGHT_STYLES

ZSH_HIGHLIGHT_STYLES['bracket-error']="fg=1,bold"
ZSH_HIGHLIGHT_STYLES['bracket-level-1']="fg=15"
ZSH_HIGHLIGHT_STYLES['bracket-level-2']="fg=15"
ZSH_HIGHLIGHT_STYLES['bracket-level-3']="fg=15"
ZSH_HIGHLIGHT_STYLES['bracket-level-4']="fg=15"
ZSH_HIGHLIGHT_STYLES['bracket-level-5']="fg=15"
ZSH_HIGHLIGHT_STYLES['bracket-level-6']="fg=15"
ZSH_HIGHLIGHT_STYLES['bracket-level-7']="fg=15"
ZSH_HIGHLIGHT_STYLES['bracket-level-8']="fg=15"
ZSH_HIGHLIGHT_STYLES['bracket-level-9']="fg=15"
ZSH_HIGHLIGHT_STYLES['cursor- matchingbracket']="bg=8,fg=6"

# Configurations for the `main` highlighter (actived by default) that highlights:
# - Commands
# - Options
# - Arguments
# - Paths
# - Strings
#
# See: https://github.com/zsh-users/zsh-syntax-highlighting/blob/master/docs/highlighters/main.md
ZSH_HIGHLIGHT_STYLES['alias']="fg=6"
ZSH_HIGHLIGHT_STYLES['arg0']="fg=6"
ZSH_HIGHLIGHT_STYLES['assign']="none"
ZSH_HIGHLIGHT_STYLES['autodirectory']="fg=4,bold"
ZSH_HIGHLIGHT_STYLES['back-dollar-quoted-argument']="fg=3"
ZSH_HIGHLIGHT_STYLES['back-double-quoted-argument']="fg=3"
ZSH_HIGHLIGHT_STYLES['back-quoted-argument-delimiter']="fg=12,bold"
ZSH_HIGHLIGHT_STYLES['back-quoted-argument']="none"
ZSH_HIGHLIGHT_STYLES['builtin']="fg=14"
ZSH_HIGHLIGHT_STYLES['command-substitution-delimiter-quoted']="fg=12,bold"
ZSH_HIGHLIGHT_STYLES['command-substitution-delimiter-unquoted']="fg=12"
ZSH_HIGHLIGHT_STYLES['command-substitution-delimiter']="fg=12"
ZSH_HIGHLIGHT_STYLES['command-substitution-unquoted']="none"
ZSH_HIGHLIGHT_STYLES['command-substitution']="none"
ZSH_HIGHLIGHT_STYLES['command']="fg=6"
ZSH_HIGHLIGHT_STYLES['commandseparator']="fg=4"
ZSH_HIGHLIGHT_STYLES['comment']="fg=8"
ZSH_HIGHLIGHT_STYLES['default']="none"
ZSH_HIGHLIGHT_STYLES['dollar-double-quoted-argument']="fg=-1,bold"
ZSH_HIGHLIGHT_STYLES['dollar-quoted-argument']="fg=2"
ZSH_HIGHLIGHT_STYLES['double-hyphen-option']="none"
ZSH_HIGHLIGHT_STYLES['double-quoted-argument']="fg=2"
ZSH_HIGHLIGHT_STYLES['function']="fg=6"
ZSH_HIGHLIGHT_STYLES['global-alias']="fg=6,bold,underline"
ZSH_HIGHLIGHT_STYLES['globbing']="fg=4"
ZSH_HIGHLIGHT_STYLES['hashed-command']="fg=6"
ZSH_HIGHLIGHT_STYLES['history-expansion']="fg=4,underline"
ZSH_HIGHLIGHT_STYLES['named-fd']="none"
ZSH_HIGHLIGHT_STYLES['numeric-fd']="fg=5"
ZSH_HIGHLIGHT_STYLES['path_prefix']="none"
ZSH_HIGHLIGHT_STYLES['path']="none"
ZSH_HIGHLIGHT_STYLES['precommand']="fg=14"
ZSH_HIGHLIGHT_STYLES['process-substitution-delimiter']="fg=12,bold"
ZSH_HIGHLIGHT_STYLES['process-substitution']="none"
ZSH_HIGHLIGHT_STYLES['rc-quote']="fg=3"
ZSH_HIGHLIGHT_STYLES['redirection']="fg=4"
ZSH_HIGHLIGHT_STYLES['reserved-word']="fg=4"
ZSH_HIGHLIGHT_STYLES['single-hyphen-option']="none"
ZSH_HIGHLIGHT_STYLES['single-quoted-argument']="fg=2"
ZSH_HIGHLIGHT_STYLES['suffix-alias']="fg=6,underline"
ZSH_HIGHLIGHT_STYLES['unknown-token']="fg=1,bold"

# Initializes the completion system.
zicompinit

# Replays cached completions.
zicdreplay
