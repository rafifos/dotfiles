[user]
  name = Rafael Julio
  email = hello.rjulio@gmail.com
  signingkey = 3E651E566E1F6D7F

[core]
  ; Use delta as the default pager.
  pager = delta --highlight-removed --file-style="box" --commit-color="#88c0d0" --file-color="#8fbcbb" --hunk-color="#81a1c1" --minus-color="#8b454b" --minus-emph-color="#bf616a" --plus-color="#4c6584" --plus-emph-color="#5e81ac" --tabs="2" --theme="Nord"

  ; CRLF endings in Windows checkouts.
  ; LF endings on Mac and Linux systems and in the repository.
  autocrlf = input

[commit]
  ; Template to be shown on the commit message prompt.
  template = ~/.git-commit-msg

  ; By default, signs commit with GnuPG.
  gpgSign = true

[status]
  showUntrackedFiles = all

[tag]
  ; Always sign annotated tags.
  forceSignAnnotated = true

[interactive]
  ; Use delta as the default interactive diff filter.
  diffFilter = delta --color-only --highlight-removed --file-style="box" --commit-color="#88c0d0" --file-color="#8fbcbb" --hunk-color="#81a1c1" --minus-color="#8b454b" --minus-emph-color="#bf616a" --plus-color="#4c6584" --plus-emph-color="#5e81ac" --theme="Nord"

# The default git colors aren't optimal, this tries to resolve it.
# See: https://github.com/arcticicestudio/igloo/blob/master/snowblocks/git/config.conf#L95
[color]
  branch = always
  diff = always
  grep = always
  pager = true
  showbranch = always
  status = always
  ui = always

[color "branch"]
  current = "white blue bold"
  local = "white bold"
  plain = "white"
  remote  = "blue bold"

[color "decorate"]
  branch = "blue bold"
  HEAD = "white bold ul"
  remoteBranch = "blue"
  stash = "yellow"
  tag = "cyan bold"

[color "diff"]
  commit = "blue bold"
  frag = "blue bold"
  func = "white"
  meta = "cyan"
  new = "green"
  old = "red"
  plain = "white"
  whitespace = "white reverse"

[color "diff-highlight"]
  oldNormal = "red bold"
  oldHighlight = "white red bold"
  newNormal = "green bold"
  newHighlight = "white green bold"

[color "grep"]
  context = "white"
  filename = "white dim ul"
  function = "white"
  linenumber = "white dim bold"
  match = "blue bold"
  selected = "white"
  separator = "white dim"

[color "interactive"]
  error = "red bold"
  header = "blue bold"
  help = "white dim"
  prompt = "cyan"

[color "status"]
  added = "green bold"
  changed = "yellow bold"
  header = "white ul"
  nobranch = "magenta bold ul"
  unmerged = "blue ul"
  untracked = "red bold"
  updated = "cyan bold"

[alias]
  dsf = "!f() { [ -z \"$GIT_PREFIX\" ] || cd \"$GIT_PREFIX\" && git diff --color \"$@\" | diff-so-fancy  | exec less --tabs=4 -RFX; }; f"

  ; Creates a .patch file for sharing with your friends.
  makepatch = !git --no-pager diff --no-color

  ; Creates an emergency commit with a COMMIT_MSG from whatthecommit.com
  yolo = !git commit -S -m \"$(curl --silent --fail http://whatthecommit.com/index.txt)\"
